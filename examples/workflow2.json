[
    {
        "buildImage": {
            "call": "docker.create",
            "args": {
                "name": "hello-world-test",
                "image": "hello-world",
                "command": "/hello"
            },
            "result": "hello_world_id"
        }
    },
    {
        "runImage": {
            "call": "docker.start",
            "args": {
                "id": "${hello_world_id}"
            }
        }
    },
    {
        "getLogs": {
            "call": "docker.logs",
            "args": {
                "id": "${hello_world_id}", 
                "stderr": false,
                "stdout": true
            },
            "result": "hello_world_logs"
        }
    },
    {
        "deleteImage": {
            "call": "docker.destroy",
            "args": {
                "id": "${hello_world_id}"
            }
        }
    },
    {
        "writeLogs": {
            "call": "file.write",
            "args": {
                "input_string": "${hello_world_logs.stdout}",
                "output_path": "output/templates/docker_logs.out"
            }
        }
    }
]
